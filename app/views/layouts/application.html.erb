<!DOCTYPE html>
<html>
  <head>
    <title>SimpleCart</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'SimpleCart', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
        
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if current_user %>
            <% if current_user.admin?%>
            <li class="nav-item">
              <span class="nav-link">Hi,<%= current_user.email %>(admin)</span>
            </li>
            <li class="nav-item">
              <%= link_to '後台管理', admin_root_path, class: "nav-link" %>
            </li>
            <%else%>
            <li class="nav-item">
              <span class="nav-link">Hi,<%= current_user.email %></span>
            </li>
            <%end%>
            <li class="nav-item">
              <%= link_to 'Profile', user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '登出', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '註冊', new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '登入', new_user_session_path, class: "nav-link" %>
            </li>
          <%end%>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
